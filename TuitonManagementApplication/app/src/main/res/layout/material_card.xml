<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/teal_700">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/robotslab"/>

        <TextView
            android:id="@+id/tvModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Module: Enterprise Application Development"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotslab"/>

        <TextView
            android:id="@+id/tvUploadedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploaded Date: Jan 18, 2024"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotslab"/>

        <TextView
            android:id="@+id/tvSubmissionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submission Date: Jan 25, 2024"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotslab"/>

        <Button
            android:id="@+id/btnView"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="View"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
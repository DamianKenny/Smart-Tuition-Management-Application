<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Student Name -->
        <TextView
            android:id="@+id/textStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:fontFamily="@font/robotslab"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Student Batch and Module -->
        <TextView
            android:id="@+id/textStudentBatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batch: 2024A | Module: Computer Science"
            android:fontFamily="@font/robotslab"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Teacher Assignment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:background="@color/purple_primary" />

            <TextView
                android:id="@+id/textTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher: John Doe (Mathematics)"
                android:fontFamily="@font/robotslab"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Course Assignment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <View
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:background="@color/blue_primary" />

            <TextView
                android:id="@+id/textCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course: Mathematics"
                android:fontFamily="@font/robotslab"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Assignment Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="16dp"
                android:background="@color/green_primary" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned: Jan 15, 2024"
                android:fontFamily="@font/robotslab"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>